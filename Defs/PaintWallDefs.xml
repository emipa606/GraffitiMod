<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <JobDef>
    <defName>GraffitiMod_Paint</defName>
    <driverClass>GraffitiMod.JobDriver_PaintWall</driverClass>
    <reportString>painting graffiti.</reportString>
    <joyDuration>8000</joyDuration>
    <joyKind>Meditative</joyKind>
    <taleOnCompletion>GraffitiMod_Paint</taleOnCompletion>
  </JobDef>
	
	<JoyGiverDef>
    <defName>GraffitiMod_Paint</defName>
    <giverClass>GraffitiMod.JoyGiver_PaintWall</giverClass>
    <baseChance>8.85</baseChance>
    <jobDef>GraffitiMod_Paint</jobDef>
    <joyKind>Meditative</joyKind>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
  </JoyGiverDef>


  <TaleDef>
    <defName>GraffitiMod_Paint</defName>
    <label>Paint wall</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>1</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->[PAWN_nameDef] painting a wall</li>
        
        <li>tale_noun->[PAWN_nameDef] playing in the sand</li>
        <li>image->[PAWN_nameFull] arranging buckets of sand [circumstance_group]</li>
        <li>image->[PAWN_nameFull] lying down on the sand [circumstance_group]</li>
        <li>circumstance_phrase->while [PAWN_possessive] friends build a fort</li>
        <li>desc_sentence->A [Color] aurora shines in the background.</li>
        <li>desc_sentence->A sand-covered [TerrainFeature] can be seen far away.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>


  <ThingDef Name="BaseGraffiti" Abstract="True">
    <thingClass>GraffitiMod.Filth_Graffiti</thingClass>
    <tickerType>Normal</tickerType>
    <category>Filth</category>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <drawerType>MapMeshAndRealTime</drawerType>
    <filth>
      <cleaningSound>Interact_CleanFilth</cleaningSound>
      <rainWashes>true</rainWashes>
      <cleaningWorkToReduceThickness>300</cleaningWorkToReduceThickness>
      <canFilthAttach>true</canFilthAttach>
    </filth>
    <building>
      <isEdifice>false</isEdifice>
      <canPlaceOverWall>true</canPlaceOverWall>
    </building>

  </ThingDef>
  
  <ThingDef ParentName="BaseGraffiti">
    <defName>GraffitiMod_Paint</defName>
    <label>graffiti</label>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Filth/Art/GraffitiMod_Paint</texPath>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Wall</li>
      </linkFlags>
    </graphicData>
    <statBases>
      <Beauty>-15</Beauty>
      <Cleanliness>-5</Cleanliness>
    </statBases>
  </ThingDef>


</Defs>